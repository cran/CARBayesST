\begin{CodeInput}
library(CARBayes)
R> parameter.summary <- summarise.samples(exp(model2$samples$beta[ ,-1]), 
+        quantiles=c(0.5, 0.025, 0.975))
R> round(parameter.summary$quantiles,3)
\end{CodeInput}

